{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
  ],
  "rules": {
    "strict": 0,
    "no-unused-vars": ["warn", {"caughtErrors": "none"}],
    "no-console": ["warn", {"allow": ["log", "info", "warn", "error"]}],
    "no-fallthrough": ["error", {"commentPattern": "(break[\\s\\w]*omitted|falls?\\s?through)"}]
  },
  "globals": {
    "L": true
  },
}
